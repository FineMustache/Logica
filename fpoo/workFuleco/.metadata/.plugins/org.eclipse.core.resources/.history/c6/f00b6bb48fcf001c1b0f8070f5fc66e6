package controle;

import java.io.BufferedReader;
import java.io.BufferedWriter;
import java.io.FileReader;
import java.io.FileWriter;
import java.io.IOException;
import java.util.ArrayList;

import modelo.Produto;

public class DAO {
	
	private BufferedReader br;
	private BufferedWriter bw;
	private String path =  "./dados/pets.csv";
	
	public ArrayList<Produto> ler(){
		ArrayList<Produto> linhas = new ArrayList<Produto>();
		Produto produto;
		
		try {
			br = new BufferedReader(new FileReader(path));
			String linha = br.readLine();
			while (linha != null) {
				produto = new Produto(linha);
				linhas.add(produto);
				linha = br.readLine();
			}
			br.close();
		} catch (Exception e) {
			System.out.println(e.toString());
		}
		
		return linhas;
	}
	
	public void escrever(ArrayList<Produto> linhas) {
		try {
			bw = new BufferedWriter(new FileWriter(path));
			
			for (Produto p : linhas) {
				bw.write(p.toCSV() + "\r\n");
			}
			
			
			bw.close();
		} catch (IOException e) {
			System.out.println(e.toString());
		}	
	}
}